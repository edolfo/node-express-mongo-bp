doctype 5
html(lang="en")
    head
        include ../lib/header
        block additionalHeader
    
    body
        nav.top-bar
            ul.title-area
                li.name
                    h1
                        a(href="/") #{appName}
                li.toggle-topbar.menu-icon
                    a(href='#')
                        span menu
            
            section.top-bar-section
                ul.right
                    li.divider
                    li
                        a(href="/login") login
                    li
                        a(href="/signup") signup
        
        .row
            .small-12.columns
                block body